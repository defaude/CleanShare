{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CleanShare",
  "version": "0.1.0",
  "identifier": "com.defaude.cleanshare",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CleanShare",
        "width": 640,
        "height": 480,
        "resizable": true,
        "visible": false,
        "skipTaskbar": true
      }
    ]
  },
  "bundle": {
    "active": false,
    "icon": []
  }
}
